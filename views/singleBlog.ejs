<%- include('./partials/head')%>



    <main>
        <%- include('./partials/nav')%>
            <div class="container py-5 single_blog">
                <a class="justify-self-end align-self-end" id="delete" data-doc="<%= blog._id%>">
                    <i class="fa-solid fa-trash"></i>
                </a>
                <a class="justify-self-end align-self-end" id="update" href="/blogs/update/<%= blog._id%>">
                    update
                </a>
                <div class="row ">
                    <div class="details">
                        <h1>
                            <%= blog.title %>
                        </h1>
                        <div class="description my-3">
                            <%= blog.description %>
                        </div>
                        <p>
                            <%= blog.body %>
                        </p>
                    </div>
                </div>
            </div>
    </main>

    <script>
        const trash = document.getElementById('delete')

        trash.addEventListener('click', (e) => {
            const endpoint = `/blogs/${trash.dataset.doc}`

            fetch(endpoint, {
                method: 'DELETE'
            })
                .then(response => response.json())
                .then(data => window.location.href = data.redirect)
                .catch(err => console.log(err))

        })

    </script>


