<%- include('./partials/head')%>


    <main>
        <%- include('./partials/nav')%>

            <div class="container">
                <div class="row">
                    <% if (blogs.length> 0) { %>
                        <% blogs.forEach(blog=> { %>
                            <a class="single col" href="/blogs/<%= blog._id %>">
                                <h3 class="title">
                                    <%= blog.title %>
                                </h3>
                            </a>
                            <% }) %>
                                <% } else { %>
                                    <p>There are no blogs to display...</p>
                                    <% } %>

                </div>
            </div>
    </main>



    <%- include('./partials/footer')%>