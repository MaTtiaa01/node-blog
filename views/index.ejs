        <%- include('./partials/nav')%>

            <div class="container">
                <div class="row">
                    <% if(blogs.length> 0){ %>
                        <% blogs.forEach(blog=>{ %>
                            <div class="col">
                                <a href="/blogs/ <%= blog.id %>">
                                    <h2>
                                        <%= blog.title %>
                                    </h2>
                                </a>
                            </div>
                            <%})%>
                                <% }else{ %>
                                    <h3>No blogs available yet!</h3>
                                    <% } %>

                </div>
            </div>
    </main>



